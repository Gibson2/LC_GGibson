<div class="text-right">
  <%= form_tag("", method: :get) do %>
    <%= search_field_tag("q", "Busca otras publicaciones") %>
    <%= submit_tag "Buscar", class: "btn btn-primary" %>
  <% end %>
</div>
  
<h1>Otras Publicaciones</h1>

<table class="table table-striped table-hover table-responsive">
  <thead>
    <tr>
      <th>Photo</th>
      <th>Title</th>
      <th>Description</th>
      <th class="text-center">Fue Adoptado?</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>

        <td><%= image_tag(post.photo.thumb, class: "img-rounded img-responsive") %></td>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td class="text-center"><%= post.adoption ? 'Si' : 'No' %></td>
        <td class="text-center"><%= link_to 'Ver Comentarios', post, class: "btn-sm btn-primary" %></td>
        <td><%= post.updated_at.to_formatted_s(:long) %></td>
      </tr>

    <% end %>
  </tbody>
</table>
  <%= paginate @posts %>

