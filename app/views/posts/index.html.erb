<div class="text-right">
  <%= form_tag("", method: :get) do %>
    <%= search_field_tag("q", "Busca tus publicaciones") %>
    <%= submit_tag "Buscar", class: "btn btn-primary" %>
  <% end %>
</div>

<h1>Tus publicaciones</h1>

<%= link_to 'New Post', new_post_path, class: "btn btn-sm btn-primary" %>
<table class="table table-striped table-hover table-responsive">
  <thead class="thead-blue">
    <tr>
      <th>Title</th>
      <th>Photo</th>
      <th>Description</th>
      <th>Adoption</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>

        <td><%= post.title %></td>
        <td><%= image_tag(post.photo.thumb, class: "img-responsive") %></td>
        <td><%= post.description %></td>
        <td><%= post.adoption ? 'Si' : 'No' %></td>
        <td><%= link_to 'Show', post, class: "btn btn-sm btn-primary" %></td>

        <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-sm btn-primary" if can? :edit, post %></td>
        <td><%= link_to 'Destroy', post, method: :delete, class: "btn btn-sm btn-primary", data: { confirm: 'Are you sure?' } if can? :destroy, post  %></td>
      </tr>

    <% end %>
  </tbody>
</table>
  <div class="pagination">
    <%= paginate @posts %>
  </div>

<br>

