<div>
  <p>
    <strong>Title:</strong>
    <%= @post.title %>
  </p>

  <p>
    <strong>Photo:</strong>
    <%= image_tag @post.photo, class: 'img-responsive', width: 300 if @post.photo%>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @post.description %>
  </p>

  <p>
    <strong>Adoption:</strong>
    <%= @post.adoption %>
  </p>

  <%= link_to 'Edit', edit_post_path(@post) if can? :edit, @post %> |

  <% if current_user == @post.user %>
    <%= link_to 'Back', posts_path %>
  <% else %>
    <%= link_to 'Back', all_posts_posts_path %>
  <% end %>

</div>

<%= render partial: "comments/viewcomments", collection: @view_comments %>

<%= render "comments/form" %>


