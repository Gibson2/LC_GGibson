<div>
  <p>
    <strong>Title:</strong>
    <%= @post.title %>
  </p>

  <p>
    <strong>Photo:</strong>
    <%= image_tag @post.photo, class: 'img-responsive', width: 300 if @post.photo%>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @post.description %>
  </p>

  <p>
    <strong>Adoption:</strong>
    <%= @post.adoption %>
  </p>

  <%= link_to 'Edit', edit_post_path(@post) if can? :edit, @post %> |

</div>

<%= render partial: "comments/viewcomments", collection: @view_comments %>

<%= render "comments/form" %>

<button class="btn btn-primary">
  
<% if current_user == @post.user %>
  <%= link_to 'Atras', posts_path %>
<% else %>
  <%= link_to 'otros posts', all_posts_posts_path %>
<% end %>
</button>


